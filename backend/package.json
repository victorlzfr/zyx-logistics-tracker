{
  "name": "zyx-logistics-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de rastreamento logístico ZYX Logistics",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "test": "echo 'Executando testes de API...' && chmod +x tests/test-api.sh && ./tests/test-api.sh",
    "test:ci": "echo 'Testes estruturais para CI/CD...' && ./tests/test-estrutura.sh",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "logistics",
    "tracking",
    "express",
    "typescript",
    "postgresql"
  ],
  "author": "Victor Luiz de França",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
