# SERVICES: Define os containers que vão rodar
services:
  postgres: # Configurações do PostgreSQL
    image: postgres:15
    environment:
      POSTGRES_DB: zyx_logistics
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: admin123
    ports:
      # Porta 5433 no host (WSL Ubuntu) para não conflitar com PostgreSQL local na 5432
      - "5433:5432"
    volumes:
      # Estratégia de persistência: Volume Docker para garantir que dados do banco sobrevivam
      # a reinicializações do container, seguindo boas práticas de conteinerização.
      # Volume "postgres_data" montando em /var/lib/postgresql/data
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      # Verifica periodicamente se o PostgreSQL está pronto para aceitar conexões
      # pg_isready: ferramenta do PostgreSQL que testa conexão ao banco
      test: ["CMD-SHELL", "pg_isready -U admin -d zyx_logistics"]
      interval: 10s
      timeout: 5s
      retries: 5

volumes:
  # Declaração do volume persistente para armazenamento de dados do banco
  # O Docker gerencia automaticamente a localização física no disco
  postgres_data: # Volume com configurações padrão, Docker escolhe o local e gerencia tudo 

